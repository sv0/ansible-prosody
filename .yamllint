---
# Based on ansible-lint config
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  empty-lines:
    max: 2
    level: error
  hyphens:
    level: error
  key-duplicates: enable
  line-length:
    max: 80
    level: error
  new-lines:
    type: unix
